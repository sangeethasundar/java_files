class Main {
  public static void main(String[] args) {
    int n=5,k;
    for(int i=0;i<n;i++){
      for(int j=n-1-i;j>0;j--){
       System.out.print(" ");
      }
      k=i+1;
      for(int l=0;l<i+1;l++){
      System.out.print(" "+k);
      k=k*(i+1);
      }
      System.out.println();
    }
  }
}

output:
     1
    2 4
   3 9 27
  4 16 64 256
 5 25 125 625 3125
