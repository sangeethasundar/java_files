import java.util.ArrayList;

class Main {
  public static void main(String[] args) {
    int n=7,i,j,k,l;
    ArrayList<String> al=new ArrayList<String>();
    String s;
    for(i=1;i<=n;i++){
      for(j=i;j>=1;j--)
        System.out.print(j+" ");
      System.out.println();
    }
  }
}

output:
1
2 1
3 2 1
4 3 2 1
5 4 3 2 1
6 5 4 3 2 1
7 6 5 4 3 2 1
